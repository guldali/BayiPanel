<!DOCTYPE HTML>
<html>
<head>
    <script src="~/Scripts/canvasjs.min.js"></script>
    <script>
        $(document).ready(function () {
            chartDraw();
            chartDrawUrun();
            chartDrawSatis();
            chartDrawVeri();
            chartLineCiro();

           
        });

    

        function chartDraw() {
            var chart = new CanvasJS.Chart("chartContainer", {
                    animationEnabled: true,
                    title: {
                        text: " Offline/Online  Durum"
                    },
             
                    data: [{
                        type: "pie",
                        startAngle: 240,
                        yValueFormatString: "##0.00'%'",
                        indexLabel: "{label} {y}",
                       
                     
                        dataPoints:@Html.Raw(ViewBag.OnlineOfflineResult)}

                    ]
                });
            chart.render();
            
        }
        function chartDrawUrun() {
            var chart2 = new CanvasJS.Chart("chartUrun", {
                    animationEnabled: true,
                    title: {
                        text: "Ürün Analizi"
                    },
             
                    data: [{
                        type: "pie",
                        startAngle: 240,
                        yValueFormatString: "##0'%'",
                        indexLabel: "{label} {y}",
                        
                        
                        dataPoints:@Html.Raw(ViewBag.UrunFarklariResult)}

                    ]
                });
            chart2.render();
        }
        function chartDrawSatis() {
            var chart3 = new CanvasJS.Chart("chartSatis", {
                    animationEnabled: true,
                    title: {
                        text: "Satış Analizi"
                    },
             
                    data: [{
                        type: "pie",
                        startAngle: 240,
                        yValueFormatString: "##0'%'",
                        indexLabel: "{label} {y}",
                        
                        
                        dataPoints:@Html.Raw(ViewBag.SatisFarklariResult)}

                    ]
                });
            chart3.render();
        }
        function chartDrawVeri() {
            var chart4 = new CanvasJS.Chart("chartVeri", {
                    animationEnabled: true,
                    title: {
                        text: "Veri Analizi"
                    },
             
                data: [{
                        
                        type: "pie",
                        startAngle: 240,
                        yValueFormatString: "##0'%'",
                        indexLabel: "{label} {y}",
                        
                        
                        dataPoints:@Html.Raw(ViewBag.VeriGonderenlerResult)}

                    ]
                });
            chart4.render();
        }
        function chartLineCiro() {
            var chart5 = new CanvasJS.Chart("chartLine", {
                title: {
                    text:"   Bayiler Aylık Toplam Ciroları"
                },
                axisX: {
                    valueFormatString: "MMMM" //x ekseninde görünecek formatı
                    
                },
                axisY: {
                    title: "Satış",
                    prefix: "$", //ön ek
                    includeZero: false //sıfır ekle dahil et
                },
                data: [{
                    
                    yValueFormatString: "$#,###",
                    xValueFormatString: "MMMM",
                    type: "spline",
                    dataPoints: [
                        { x: new Date(2017, 0), y: 25060 },
                        { x: new Date(2017, 1), y: 27980 },
                        { x: new Date(2017, 2), y: 33800 },
                        { x: new Date(2017, 3), y: 49400 },
                        { x: new Date(2017, 4), y: 40260 },
                        { x: new Date(2017, 5), y: 33900 },
                        { x: new Date(2017, 6), y: 48000 },
                        { x: new Date(2017, 7), y: 31500 },
                        { x: new Date(2017, 8), y: 32300 },
                        { x: new Date(2017, 9), y: 42000 },
                        { x: new Date(2017, 10), y: 52160 },
                        { x: new Date(2017, 11), y: 49400 }
                    ]
                }]
            })
            chart5.render();
        }

    </script>
</head>
<body>
    <div>
        <a id="button" href="OnlineOfflineDetay" style=" position: absolute;left: 350px; top: 500px;" class="btn btn-success ">Detay</a>
    </div>
    <div>
        <a id="buttonUrun" href="UrunDetay" style=" position: absolute;left: 680px; top: 500px;" class="btn btn-danger ">Detay</a>
    </div>
    <div>
        <a id="buttonSatıs" href="SatısAnalizi" style="position:absolute;left:1000px; top:500px;" class="btn btn-info">Detay</a>
    </div>

    <div>
        <a id="buttonVeri" href="VeriAnalizi" style="position:absolute;left:1350px;top:500px;" class="btn btn-warning">Detay</a>
    </div>
    <div>
        <a id="buttonCiro" href="Ciro"    style="position:absolute;left:350px;top:1020px;" class="btn btn-success">Detay</a>
    </div>
    <style>
        .btn {
            width: 100px;
            height: 40px;
        }
    </style>

    <div class="row">

        <div id="chartContainer" style="height:300px;width:100%; " class="col-sm-3"> </div>
        <div id="chartUrun" style="height:300px;width:100%; " class="col-sm-3"></div>
        <div id="chartSatis" style="height:300px;width:100%; " class="col-sm-3"></div>
        <div id="chartVeri" style="height:300px;width:100%; " class="col-sm-3"></div>

    </div>
    <div class="row">
        <div id="chartLine" style="height:300px;width:100%; margin-top:250px" class="col-sm-4"></div>
    </div>
</body>
</html>